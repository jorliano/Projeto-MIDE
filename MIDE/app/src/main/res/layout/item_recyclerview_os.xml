<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/im_recycler"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_delete"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_toRightOf="@+id/im_recycler"
            android:layout_toEndOf="@+id/im_recycler"
            android:id="@+id/tv_titulo_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="teste"
            android:paddingRight="16dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_hora_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textSize="14sp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="20dp"
            android:layout_alignBottom="@+id/tv_titulo_recycler"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:layout_toRightOf="@+id/im_recycler"
            android:layout_toEndOf="@+id/im_recycler"
            android:id="@+id/tv_descricao_recycler"
            android:layout_below="@+id/tv_titulo_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:maxLines="2"
            android:paddingRight="16dp"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/im_recycler"
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

</LinearLayout>
